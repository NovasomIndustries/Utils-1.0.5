#!/bin/sh
# $1 = kernel
# $2 = source me file
KERNEL=$1
SOURCEMEFILE=$2
echo "Working on ${KERNEL} with ${SOURCEMEFILE}"
. ../${SOURCEMEFILE}
cd ../../Kernel/${KERNEL}
make -j32 Image
echo "1" > /tmp/result
[ ! "$?" = "0" ] && exit
make -j32 modules
[ ! "$?" = "0" ] && exit
make -j32 dtbs
[ ! "$?" = "0" ] && exit
cp arch/arm64/boot/Image /Devel/NOVAsom_SDK/Blobs/linux-allw-4.14.0_Image
cp arch/arm64/boot/Image /Devel/NOVAsom_SDK/Blobs/Deploy/.
echo "0" > /tmp/result
